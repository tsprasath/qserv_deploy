#!/bin/bash

# Copy orchestration script to kubernetes master
# Start Qserv pods
# Wait for Qserv startup

# @author Fabrice Jammes SLAC/IN2P3

set -e

DIR=$(cd "$(dirname "$0")"; pwd -P)

"$QSERV_INSTALL_DIR"/kubectl/create-storage.sh "/qserv/data"
"$QSERV_INSTALL_DIR"/kubectl/start.sh
"$QSERV_INSTALL_DIR"/kubectl/wait-statefulset-ready.sh
